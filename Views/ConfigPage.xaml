<Page x:Class="SaturnLoader.Views.ConfigPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="560" d:DesignWidth="600"
      Background="{StaticResource PrimaryDarkBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30">
            <TextBlock Text="SETTINGS" 
                      FontSize="28" 
                      FontWeight="Bold" 
                      Foreground="{StaticResource TextPrimaryBrush}"
                      Margin="0,0,0,30"/>
            
            <!-- Appearance Settings -->
            <Border Style="{StaticResource CardStyle}"
                   Padding="20"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Appearance" 
                              FontSize="18" 
                              FontWeight="SemiBold"
                              Foreground="{StaticResource TextPrimaryBrush}"
                              Margin="0,0,0,15"/>
                    
                    <CheckBox x:Name="DarkModeCheckBox"
                             Content="Dark Mode"
                             Foreground="{StaticResource TextPrimaryBrush}"
                             IsChecked="True"
                             Margin="0,0,0,10"/>
                    
                    <CheckBox x:Name="ShowAvatarCheckBox"
                             Content="Show User Avatar"
                             Foreground="{StaticResource TextPrimaryBrush}"
                             IsChecked="True"
                             Margin="0,0,0,10"/>
                    
                    <CheckBox x:Name="ShowUsernameCheckBox"
                             Content="Show Username"
                             Foreground="{StaticResource TextPrimaryBrush}"
                             IsChecked="True"
                             Margin="0,0,0,10"/>
                </StackPanel>
            </Border>
            
            <!-- System Settings -->
            <Border Style="{StaticResource CardStyle}"
                   Padding="20"
                   Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="System" 
                              FontSize="18" 
                              FontWeight="SemiBold"
                              Foreground="{StaticResource TextPrimaryBrush}"
                              Margin="0,0,0,15"/>
                    
                    <CheckBox x:Name="StartWithWindowsCheckBox"
                             Content="Start with Windows"
                             Foreground="{StaticResource TextPrimaryBrush}"
                             IsChecked="False"
                             Margin="0,0,0,10"/>
                    
                    <CheckBox x:Name="MinimizeToTrayCheckBox"
                             Content="Minimize to System Tray"
                             Foreground="{StaticResource TextPrimaryBrush}"
                             IsChecked="True"
                             Margin="0,0,0,10"/>
                    
                    <CheckBox x:Name="DebugModeCheckBox"
                             Content="Debug Mode (Show technical details)"
                             Foreground="{StaticResource TextPrimaryBrush}"
                             IsChecked="False"
                             Margin="0,0,0,10"/>
                </StackPanel>
            </Border>
            
            <!-- Save Button -->
            <Button Style="{StaticResource PrimaryButtonStyle}"
                   Content="SAVE SETTINGS"
                   Padding="25,12"
                   FontSize="14"
                   FontWeight="SemiBold"
                   HorizontalAlignment="Right"
                   Click="SaveSettings_Click"/>
        </StackPanel>
    </ScrollViewer>
</Page>