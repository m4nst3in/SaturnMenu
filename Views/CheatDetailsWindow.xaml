<Window x:Class="SaturnLoader.Views.CheatDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Cheat Details" 
        Height="500" Width="400"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    
    <Window.Resources>
        <Style TargetType="Window">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Window">
                        <Border Background="{StaticResource PrimaryDarkBrush}" 
                                BorderBrush="{StaticResource AccentBlueBrush}" 
                                BorderThickness="1" 
                                CornerRadius="15">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0" 
                                                  Direction="0" 
                                                  Color="{StaticResource AccentBlue}" 
                                                  Opacity="0.3" 
                                                  BlurRadius="20"/>
                            </Border.Effect>
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Margin="30">
        <StackPanel>
            <!-- Header -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="{Binding Name}" 
                              FontSize="24" 
                              FontWeight="Bold" 
                              Foreground="{StaticResource TextPrimaryBrush}"
                              Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding Game}" 
                              FontSize="14" 
                              Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>
                
                <Button Grid.Column="1" 
                       Style="{StaticResource NavButtonStyle}"
                       Width="30" Height="30"
                       Padding="5"
                       Click="CloseButton_Click">
                    <Path Data="M0,0 L10,10 M10,0 L0,10" 
                          Stroke="{StaticResource TextPrimaryBrush}" 
                          StrokeThickness="2" 
                          Width="10" Height="10"/>
                </Button>
            </Grid>
            
            <!-- Status -->
            <Border Background="{StaticResource SecondaryDarkBrush}"
                   CornerRadius="10"
                   Padding="20"
                   Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Status" 
                                  FontSize="16" 
                                  FontWeight="SemiBold"
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding Status}" 
                                  FontSize="14" 
                                  Foreground="{StaticResource SuccessGreenBrush}"/>
                        <TextBlock Text="{Binding TimeRemaining}" 
                                  FontSize="12" 
                                  Foreground="{StaticResource TextSecondaryBrush}"
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                    
                    <Border Grid.Column="1" 
                           Width="40" Height="40" 
                           CornerRadius="20"
                           Background="{StaticResource SuccessGreenBrush}">
                        <TextBlock Text="âœ“" 
                                  FontSize="20" 
                                  FontWeight="Bold"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>
            
            <!-- Features -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Features" 
                          FontSize="18" 
                          FontWeight="SemiBold"
                          Foreground="{StaticResource TextPrimaryBrush}"
                          Margin="0,0,0,10"/>
                
                <ItemsControl x:Name="FeaturesItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{StaticResource SecondaryDarkBrush}"
                                   CornerRadius="5"
                                   Padding="15,10"
                                   Margin="0,0,0,5">
                                <TextBlock Text="{Binding}" 
                                          FontSize="14" 
                                          Foreground="{StaticResource TextPrimaryBrush}"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
            
            <!-- Actions -->
            <StackPanel>
                <Button x:Name="LoadKDButton" 
                       Style="{StaticResource PrimaryButtonStyle}"
                       Content="LOAD KERNEL DRIVER"
                       Padding="20,15"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Click="LoadKD_Click"
                       Margin="0,0,0,10"/>
                
                <Button x:Name="LoadUMButton" 
                       Style="{StaticResource PrimaryButtonStyle}"
                       Content="LOAD USER MODE"
                       Padding="20,15"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Click="LoadUM_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>