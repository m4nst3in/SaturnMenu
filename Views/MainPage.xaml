<Page x:Class="NoturnalLoader.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="560" d:DesignWidth="800"
      Background="{StaticResource PrimaryDarkBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Navigation Panel -->
        <Border Grid.Column="0" 
                Background="{StaticResource SecondaryDarkBrush}" 
                BorderBrush="{StaticResource AccentBlueBrush}" 
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Logo Section -->
                <StackPanel Grid.Row="0" Margin="20,30,20,20">
                    <TextBlock Text="NOTURNAL" 
                              FontSize="24" 
                              FontWeight="Bold" 
                              Foreground="{StaticResource TextPrimaryBrush}"
                              HorizontalAlignment="Center"/>
                    <TextBlock Text="LOADER" 
                              FontSize="14" 
                              Foreground="{StaticResource TextSecondaryBrush}"
                              HorizontalAlignment="Center"
                              Margin="0,2,0,0"/>
                </StackPanel>
                
                <!-- Navigation Buttons -->
                <StackPanel Grid.Row="1" Margin="10,0,10,0">
                    <Button x:Name="InjectorButton" 
                            Style="{StaticResource NavButtonStyle}"
                            Content="INJECTOR"
                            Click="InjectorButton_Click"
                            Margin="0,5"/>
                    
                    <Button x:Name="WebsiteButton" 
                            Style="{StaticResource NavButtonStyle}"
                            Content="WEBSITE"
                            Click="WebsiteButton_Click"
                            Margin="0,5"/>
                    
                    <Button x:Name="ConfigButton" 
                            Style="{StaticResource NavButtonStyle}"
                            Content="CONFIG"
                            Click="ConfigButton_Click"
                            Margin="0,5"/>
                    
                    <Button x:Name="SupportButton" 
                            Style="{StaticResource NavButtonStyle}"
                            Content="SUPPORT"
                            Click="SupportButton_Click"
                            Margin="0,5"/>
                </StackPanel>
                
                <!-- User Info -->
                <Border Grid.Row="2" 
                        Background="{StaticResource PrimaryDarkBrush}" 
                        CornerRadius="10"
                        Margin="10,10,10,20"
                        Padding="15,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Avatar -->
                        <Border Grid.Column="0" 
                                Width="32" Height="32" 
                                CornerRadius="16"
                                Background="{StaticResource AccentBlueBrush}"
                                Margin="0,0,10,0">
                            <TextBlock Text="ðŸ‘¤" 
                                      FontSize="16" 
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                        
                        <!-- Username -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding CurrentUser.Username}" 
                                      FontSize="14" 
                                      FontWeight="SemiBold"
                                      Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock Text="Online" 
                                      FontSize="11" 
                                      Foreground="{StaticResource SuccessGreenBrush}"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
        
        <!-- Main Content Area -->
        <Frame x:Name="ContentFrame" 
               Grid.Column="1" 
               NavigationUIVisibility="Hidden"
               Background="{StaticResource PrimaryDarkBrush}"/>
    </Grid>
</Page>