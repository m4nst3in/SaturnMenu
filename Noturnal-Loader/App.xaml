<Application x:Class="Noturnal.Loader.App" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <!-- Ordem importa: Cores primeiro, depois Tipografia, depois Estilos que usam cores -->
        <ResourceDictionary Source="Themes/Colors.xaml"/>
        <ResourceDictionary Source="Themes/Typography.xaml"/>
        <ResourceDictionary Source="Themes/Spacing.xaml"/>
        <ResourceDictionary Source="Themes/Styles.xaml"/>
        <!-- DarkTheme.xaml não é mais necessário se Colors.xaml já define o padrão escuro -->
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Application.Resources>
</Application>