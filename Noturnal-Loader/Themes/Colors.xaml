<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Paleta Base "Noturnal" -->
    <Color x:Key="Color.Background.Deep">#05060A</Color> <!-- Fundo Absoluto -->
    <Color x:Key="Color.Background.Level1">#0E1018</Color> <!-- Camada 1 -->
    <Color x:Key="Color.Surface">#151722</Color>          <!-- Paineis/Cartões -->
    <Color x:Key="Color.SurfaceHighlight">#1F2233</Color>  <!-- Hover -->
    
    <Color x:Key="Color.Primary">#7C4DFF</Color>   <!-- Roxo Neon -->
    <Color x:Key="Color.Secondary">#448AFF</Color> <!-- Azul Neon -->
    
    <Color x:Key="Color.TextPrimary">#FFFFFF</Color>
    <Color x:Key="Color.TextSecondary">#8F9BB3</Color>
    <Color x:Key="Color.TextDisabled">#4A525D</Color>
    
    <Color x:Key="Color.Border">#2A2E40</Color>
    <Color x:Key="Color.Success">#00E676</Color>
    <Color x:Key="Color.Error">#FF5252</Color>

    <!-- Brushes Sólidos -->
    <SolidColorBrush x:Key="Brush.Background" Color="{StaticResource Color.Background.Deep}"/>
    <SolidColorBrush x:Key="Brush.Surface" Color="{StaticResource Color.Surface}"/>
    <SolidColorBrush x:Key="Brush.SurfaceHighlight" Color="{StaticResource Color.SurfaceHighlight}"/>
    <SolidColorBrush x:Key="Brush.TextPrimary" Color="{StaticResource Color.TextPrimary}"/>
    <SolidColorBrush x:Key="Brush.TextSecondary" Color="{StaticResource Color.TextSecondary}"/>
    <SolidColorBrush x:Key="Brush.TextDisabled" Color="{StaticResource Color.TextDisabled}"/>
    <SolidColorBrush x:Key="Brush.Outline" Color="{StaticResource Color.Border}"/>
    <SolidColorBrush x:Key="Brush.Error" Color="{StaticResource Color.Error}"/>
    <SolidColorBrush x:Key="Brush.Success" Color="{StaticResource Color.Success}"/>

    <!-- GRADIENTES PREMIUM -->
    
    <!-- Gradiente Principal (Roxo -> Azul) -->
    <LinearGradientBrush x:Key="Brush.AccentGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource Color.Primary}" Offset="0"/>
        <GradientStop Color="{StaticResource Color.Secondary}" Offset="1"/>
    </LinearGradientBrush>

    <!-- Gradiente do Texto do Logo -->
    <LinearGradientBrush x:Key="Brush.NoturnalTitleGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#9D50BB" Offset="0.0"/>
        <GradientStop Color="#6E48AA" Offset="1.0"/>
    </LinearGradientBrush>
    
    <!-- Fundo Cyber (Profundo com leve toque azulado no topo) -->
    <LinearGradientBrush x:Key="Brush.CyberBackground" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Color="#020205" Offset="0"/>
        <GradientStop Color="#090A12" Offset="1"/>
    </LinearGradientBrush>

</ResourceDictionary>