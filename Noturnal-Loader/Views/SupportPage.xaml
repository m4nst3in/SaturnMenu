<Page x:Class="Noturnal.Loader.Views.SupportPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Grid>
    <StackPanel>
      <TextBlock Text="Support" FontSize="20" FontWeight="Bold"/>
      <Button Style="{StaticResource GhostButton}" Content="Open Chat/FAQ" Click="OpenFaq_Click" Margin="0,8,0,0"/>
      <Button Style="{StaticResource GhostButton}" Content="Open Discord" Click="OpenDiscord_Click" Margin="0,8,0,0"/>
      <Button Style="{StaticResource GhostButton}" Content="Support by Email" Click="OpenEmail_Click" Margin="0,8,0,0"/>
      <Button Style="{StaticResource AccentButton}" Content="Send Logs" Click="SendLogs_Click" Margin="0,12,0,0"/>
    </StackPanel>
  </Grid>
</Page>
