<Page x:Class="Noturnal.Loader.Views.ConfigPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Grid>
    <StackPanel>
      <TextBlock Text="Settings" FontSize="20" FontWeight="Bold"/>
      <CheckBox x:Name="DarkCheck" Content="Dark Theme" IsChecked="True" Margin="0,8,0,0"/>
      <CheckBox x:Name="HighContrastCheck" Content="High Contrast" Margin="0,8,0,0"/>
      <CheckBox Content="Show avatar/name" IsChecked="True" Margin="0,8,0,0"/>
      <CheckBox Content="Debug mode" Margin="0,8,0,0"/>
      <CheckBox Content="Start with Windows" Margin="0,8,0,0"/>
    </StackPanel>
  </Grid>
</Page>
