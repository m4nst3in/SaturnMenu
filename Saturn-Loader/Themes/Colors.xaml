<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Color x:Key="Color.Background">#0E1116</Color>
  <Color x:Key="Color.Surface">#131720</Color>
  <Color x:Key="Color.Card">#171C26</Color>
  <Color x:Key="Color.Accent">#8B6CF0</Color>
  <Color x:Key="Color.TextPrimary">#F2F4F8</Color>
  <Color x:Key="Color.TextSecondary">#A7AFC2</Color>
  <SolidColorBrush x:Key="Brush.Background" Color="{StaticResource Color.Background}"/>
  <SolidColorBrush x:Key="Brush.Surface" Color="{StaticResource Color.Surface}"/>
  <SolidColorBrush x:Key="Brush.Card" Color="{StaticResource Color.Card}"/>
  <SolidColorBrush x:Key="Brush.Accent" Color="{StaticResource Color.Accent}"/>
  <LinearGradientBrush x:Key="Brush.AccentGradient" StartPoint="0,0" EndPoint="1,1">
    <GradientStop Color="#9D82FF" Offset="0"/>
    <GradientStop Color="#7C64F0" Offset="1"/>
  </LinearGradientBrush>
  <SolidColorBrush x:Key="Brush.Outline" Color="#262D3E"/>
  <Color x:Key="Color.Success">#32D27F</Color>
  <Color x:Key="Color.Error">#E05B5B</Color>
  <SolidColorBrush x:Key="Brush.Success" Color="{StaticResource Color.Success}"/>
  <SolidColorBrush x:Key="Brush.Error" Color="{StaticResource Color.Error}"/>
  <SolidColorBrush x:Key="Brush.TextPrimary" Color="{StaticResource Color.TextPrimary}"/>
  <SolidColorBrush x:Key="Brush.TextSecondary" Color="{StaticResource Color.TextSecondary}"/>
  <LinearGradientBrush x:Key="Brush.SaturnTitleGradient" StartPoint="0,0" EndPoint="1,0">
    <GradientStop Color="#8B6CF0" Offset="0"/>
    <GradientStop Color="#C9BFFF" Offset="0.7"/>
    <GradientStop Color="#FFFFFF" Offset="1"/>
  </LinearGradientBrush>
</ResourceDictionary>